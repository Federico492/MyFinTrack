<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_principal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Select the category color"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/circle_white"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/circle_white"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="25dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_principal" />

    <View
        android:id="@+id/circle_black"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/circle_black"
        android:layout_margin="25dp"
        app:layout_constraintStart_toEndOf="@+id/circle_white"
        app:layout_constraintTop_toBottomOf="@+id/tv_principal" />

    <View
        android:id="@+id/circle_red"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="25dp"
        android:background="@drawable/circle_red"
        app:layout_constraintStart_toEndOf="@+id/circle_black"
        app:layout_constraintTop_toBottomOf="@+id/tv_principal" />

    <View
        android:id="@+id/circle_purple"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="25dp"
        android:background="@drawable/circle_violet"
        app:layout_constraintStart_toEndOf="@+id/circle_red"
        app:layout_constraintTop_toBottomOf="@+id/tv_principal" />

    <View
        android:id="@+id/circle_ocean_blue"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="25dp"
        android:background="@drawable/circle_ocean_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circle_white" />

    <View
        android:id="@+id/circle_blue"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="25dp"
        android:background="@drawable/circle_blue"
        app:layout_constraintStart_toEndOf="@+id/circle_ocean_blue"
        app:layout_constraintTop_toBottomOf="@+id/circle_black" />

    <View
        android:id="@+id/circle_water_blue"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="25dp"
        android:background="@drawable/circle_water_blue"
        app:layout_constraintStart_toEndOf="@+id/circle_blue"
        app:layout_constraintTop_toBottomOf="@+id/circle_red" />

    <View
        android:id="@+id/circle_water_green"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="25dp"
        android:background="@drawable/circle_water_green"
        app:layout_constraintStart_toEndOf="@+id/circle_water_blue"
        app:layout_constraintTop_toBottomOf="@+id/circle_purple" />

    <View
        android:id="@+id/circle_medium_orange"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="25dp"
        android:background="@drawable/circle_medium_orange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circle_green" />

    <View
        android:id="@+id/circle_light_yellow"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="25dp"
        android:background="@drawable/circle_light_yellow"
        app:layout_constraintStart_toEndOf="@+id/circle_green"
        app:layout_constraintTop_toBottomOf="@+id/circle_blue" />

    <View
        android:id="@+id/circle_medium_yellow"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="25dp"
        android:background="@drawable/circle_medium_yellow"
        app:layout_constraintStart_toEndOf="@+id/circle_light_yellow"
        app:layout_constraintTop_toBottomOf="@+id/circle_water_blue" />

    <View
        android:id="@+id/circle_light_orange"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="25dp"
        android:background="@drawable/circle_light_orange"
        app:layout_constraintStart_toEndOf="@+id/circle_medium_yellow"
        app:layout_constraintTop_toBottomOf="@+id/circle_water_green" />

    <View
        android:id="@+id/circle_green"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="25dp"
        android:background="@drawable/circle_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circle_ocean_blue" />

    <View
        android:id="@+id/circle_brown"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="25dp"
        android:background="@drawable/circle_brown"
        app:layout_constraintStart_toEndOf="@+id/circle_medium_orange"
        app:layout_constraintTop_toBottomOf="@+id/circle_light_yellow" />

    <View
        android:id="@+id/circle_grey"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="25dp"
        android:background="@drawable/circle_grey"
        app:layout_constraintStart_toEndOf="@+id/circle_brown"
        app:layout_constraintTop_toBottomOf="@+id/circle_medium_yellow" />

    <View
        android:id="@+id/circle_pink"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="25dp"
        android:background="@drawable/circle_pink"
        app:layout_constraintStart_toEndOf="@+id/circle_grey"
        app:layout_constraintTop_toBottomOf="@+id/circle_light_orange" />

</androidx.constraintlayout.widget.ConstraintLayout>